{
  "frontmatter": {
    "scope": "markdown",
    "prefix": "frontmatter",
    "body": [
      "---",
      "author: $1",
      "pubDatetime: $CURRENT_YEAR-$CURRENT_MONTH-${CURRENT_DATE}T$CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND.000$CURRENT_TIMEZONE_OFFSET",
      "modDatetime: $3",
      "title: $4",
      "featured: ${5|false,true|}",
      "draft: ${6|true,false|}",
      "tags:",
      "  - $7",
      "description: $8",
      "---"
    ],
    "description": "Adds the frontmatter block for the AstroPaper Blog post"
  },
  "blog template": {
    "scope": "markdown",
    "prefix": "template",
    "body": [
      "${1:frontmatter}",
      "",
      "${2: Introductory Sentence}",
      "",
      "## Table of contents",
      "",
      "## ${3: heading 1}"
    ],
    "description": "Adds the template for the AstroPaper Blog post. You will need to trigger the snippet modal on the 'frontmatter' line to insert the other snipper."
  },
  "bash code block": {
    "prefix": "bash",
    "body": [
      "```bash",
      "$1",
      "```"
    ],
    "description": "Insert a bash code block"
  },
  "yaml code block": {
    "prefix": "yaml",
    "body": [
      "```yaml",
      "$1",
      "```"
    ],
    "description": "Insert a yaml code block"
  },
  "go code block": {
    "prefix": "go",
    "body": [
      "```go",
      "$1",
      "```"
    ],
    "description": "Insert a go code block"
  },
  "sql code block": {
    "prefix": "sql",
    "body": [
      "```sql",
      "$1",
      "```"
    ],
    "description": "Insert a sql code block"
  },
  "chirpy tip": {
    "prefix": "chirpy",
    "body": [
      " ",
      "<!-- markdownlint-disable -->",
      "<!-- prettier-ignore-start -->",
      " ",
      "<!-- tip=green, info=blue, warning=yellow, danger=red -->",
      " ",
      "> $1",
      "{: .prompt-$2 }",
      " ",
      "<!-- prettier-ignore-end -->",
      "<!-- markdownlint-restore -->"
    ],
    "description": "Insert a chirpy theme tip"
  },
  "markdownlint": {
    "prefix": "markdownlint",
    "body": [
      " ",
      "<!-- markdownlint-disable -->",
      " ",
      "> $1",
      " ",
      "<!-- markdownlint-restore -->"
    ],
    "description": "Markdownlint disable range"
  },
  "prettier ignore": {
    "prefix": "prettier-ignore",
    "body": [
      " ",
      "<!-- prettier-ignore-start -->",
      " ",
      "> $1",
      " ",
      "<!-- prettier-ignore-end -->"
    ],
    "description": "Prettier ignore range"
  },
  "regular link": {
    "prefix": "link",
    "body": [
      "[$1]($2)"
    ],
    "description": "Create a new link"
  },
  "link in new tab": {
    "prefix": "linkt",
    "body": [
      "[$1]($2){:target=\"_blank\"}"
    ],
    "description": "Open a link in a new tab (chirpy theme)"
  },
  "todo item": {
    "prefix": "todo",
    "body": [
      "<!-- TODO: $1 -->"
    ],
    "description": "Create a todo item"
  },
  "markdown workflow 25": {
    "prefix": "lam",
    "body": [
      "lamw25wmal"
    ],
    "description": "markdown workflow 25"
  },
  "insert current ISO Date": {
    "prefix": "isodate",
    "body": [
      "$CURRENT_YEAR-$CURRENT_MONTH-${CURRENT_DATE}T$CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND.000$CURRENT_TIMEZONE_OFFSET"
    ],
    "description": "Inserts the current date in ISO format"
  }
}
